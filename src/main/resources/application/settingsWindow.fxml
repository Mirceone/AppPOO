<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefWidth="500" prefHeight="400" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.SettingsWindowController">
    <children>
        <Label text="Settings" />
        <Label text="Change Username:" />
        <TextField fx:id="newUsernameField" maxWidth="300" promptText="Enter new username" />
        <Button text="Change Username" onAction="#onChangeUsername"/>
        <Label text="Delete Account:" />
        <Button text="Delete Account" onAction="#onDeleteAccount"/>
        <Label text=" " fx:id="errorMessage"/>
    </children>
</VBox>
